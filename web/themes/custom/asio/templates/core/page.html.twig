<div class="top-menu">
	{{ page.top_menu }}
</div>	
<div class="top-line">
	{{ page.top_line }}
</div>
<header>
	{{ page.header }}
</header>
<main role="main" class="flex-grow-1">
	<div class="layout-container container">
		<div class="row">
			{% if page.left_sidebar %}
			  <div class="left-sidebar col-lg-4">
				{{ page.left_sidebar }}
			  </div>
			{% endif %}
			<div class="content col-12 col-lg-{{ (page.left_sidebar)? '8':'12' }}">
			  {{ page.breadcrumb }}
			  {{ page.content }}
			</div>
		</div>
	</div>
</main>

<footer class="mt-5">
	<div class="container">
	{{ page.footer }}
	</div>  
</footer> 






