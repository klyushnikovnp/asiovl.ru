{% if breadcrumb %}
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb py-3 px-0 bg-white">
    {% for item in breadcrumb %}
      <li class="breadcrumb-item d-flex align-items-center">
        {% if item.url %}
          <a href="{{ item.url }}" class="pr-2">{{ item.text }}</a>  
        {% else %}
          {{ item.text }}
        {% endif %}
      </li>
    {% endfor %}
    </ol>
  </nav>
{% endif %}